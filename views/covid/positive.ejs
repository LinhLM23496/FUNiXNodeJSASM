                        <option value="false">Âm tính</option>
                    </select>
                    <button type="submit" class="btn btn-shimmer btn-primary mt-5">Cập nhật thông tin</button>
                </form>
            </article>
        </div>
    <%- include('../includes/end.ejs') %>
