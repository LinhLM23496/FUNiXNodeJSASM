        <div class="grid">
            <article class="user-content">
                <h2 class="mb-3 ml-4 user-name">
                    <%= user.name %>
                </h2>
                <form action="/covid/positive" method="post">
                    <label id="active">Ngày nhiễm: </label>
                    <input type="date" id="date" name="date">
