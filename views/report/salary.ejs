<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/public/css/report.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="grid mt-5">
            <article class="card__content">
                <form action="/report/salary" method="POST">
                    <input type="month" name="month" id="month">
                    <button type="submit" class="btn-primary">Chọn</button>
                </form>
                <% if (haveWork) { %>
                <div class="card__content">
                        <p>Tháng: <%= today %> </p>
                        <p class="product__description">Lương: 
                            <%= salaryScale %>
                        </p>
                        <p class="product__description">Số giờ làm: 
                            <%= workTime %>
                        </p>
                        <p class="product__description">Số giờ tăng ca:
                            <%= overTime %>
                        </p>
                        <p class="product__description">Số giờ thiếu:
                            <%= enoughTime %> giờ
                        </p>
                    </div>
                <% } %>
            </article>
        </div>
    </main>
<%- include('../includes/end.ejs') %></body>